{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "qmake",
      "type": "shell",
      "command": "qmake",
      "args": [
        "-spec",
        "win32-g++",
        "editionqt-main/editionqt.pro",
        "-o",
        "Makefile"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": []
    },
    {
      "label": "build (mingw32-make)",
      "type": "shell",
      "command": "mingw32-make",
      "args": [
        "release"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "qmake"
    },
    {
      "label": "C/C++: g++.exe build active file",
      "type": "cppbuild",
      "command": "C:/Qt/6.9.1/mingw_64/bin/g++.exe",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "none"
      },
      "detail": "Task generated by Debugger."
    }
  ]
}